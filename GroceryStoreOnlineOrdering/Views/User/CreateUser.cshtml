@model GroceryStoreOnlineOrdering.Models.User
<h3>Create an account</h3>
<div class="container">
    <form asp-controller="User" asp-action="CreateUser" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" placeholder="Enter Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" placeholder="Enter password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <a class="btn btn-primary" asp-controller="User" asp-action="Login">Back</a>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>