@model GroceryStore.Models.User

@{
    ViewData["Title"] = "Login page";
}


<div class="container">
    <h2>Login Form</h2>
    <div class="row">
        <div class="col-6">
            <form asp-controller="User" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Id">ID</label>
                    <input class="form-control" placeholder="Enter Your ID" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" placeholder="Enter Your Name" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
                <div>
                    <a asp-controller="User" asp-action="CreateUser">Create An Account</a>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Remember me
                    </label>
                </div>
                <button class="btn btn-primary" type="submit">Login</button>

            </form>
        </div>
        <div class="col-6"></div>
    </div>


</div>

